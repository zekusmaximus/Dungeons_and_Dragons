{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RandomTable",
  "type": "object",
  "required": ["name", "dice", "rows"],
  "additionalProperties": false,
  "properties": {
    "name": {"type": "string"},
    "dice": {"type": "string"},
    "tags": {
      "type": "array",
      "items": {"type": "string"},
      "default": []
    },
    "rows": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["range", "result"],
        "properties": {
          "range": {
            "type": "array",
            "items": {"type": "integer"},
            "minItems": 2,
            "maxItems": 2
          },
          "result": {"type": "object"}
        },
        "additionalProperties": false
      }
    }
  }
}
