{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SessionState",
  "type": "object",
  "required": [
    "character",
    "turn",
    "scene_id",
    "location",
    "hp",
    "conditions",
    "flags",
    "log_index",
    "world",
    "hex",
    "time",
    "weather",
    "travel_pace",
    "exhaustion",
    "quests",
    "gp"
  ],
  "additionalProperties": false,
  "properties": {
    "character": {"type": "string"},
    "turn": {"type": "integer", "minimum": 0},
    "scene_id": {"type": "string"},
    "location": {"type": "string"},
    "hp": {"type": "integer"},
    "conditions": {
      "type": "array",
      "items": {"type": "string"}
    },
    "flags": {
      "type": "object",
      "additionalProperties": true
    },
    "log_index": {"type": "integer", "minimum": 0},
    "world": {"type": "string"},
    "hex": {
      "type": "object",
      "required": ["q", "r"],
      "properties": {
        "q": {"type": "integer"},
        "r": {"type": "integer"}
      },
      "additionalProperties": false
    },
    "time": {"type": "string", "format": "date-time"},
    "weather": {"type": "string"},
    "travel_pace": {"type": "string"},
    "exhaustion": {"type": "integer", "minimum": 0},
    "quests": {
      "type": "object",
      "additionalProperties": {"type": "object"}
    },
    "gp": {"type": "integer", "minimum": 0}
  }
}
